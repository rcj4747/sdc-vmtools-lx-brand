#!/bin/sh
set -e

pkg=joyent-lxtools

remove_divert() {
    if [ ! -z "$(dpkg-divert --list $1)" ]; then
        dpkg-divert --remove --package $pkg --rename --divert $1.$pkg $1
    fi
}

## Do not edit DIVERSIONS, it is populated by ../install.sh
DIVERSIONS="
"

if [ "$1" = "remove" ]; then
    for div in $DIVERSIONS; do
        remove_divert $div
    done
fi
